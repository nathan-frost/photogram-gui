<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
    <dd>
      <img src="<%= @the_photo.image%>">
    </dd>
  <dt>Caption</dt>
  <dd>
    <p><%= @the_photo.caption%></p>
  </dd>
  <dt>Owner</dt>
  <dd>
    <%= @the_photo.poster.username%><
  </dd>
  <dt>Posted</dt>
  <dd>
    <%= @the_photo.created_at%><
  </dd>
</dl>

<h2>Comments</h2>
<table>
<% @the_photo.comments.each do |a_comment|%>
<tr>
  <td> <%= a_comment.commenter.username%> </td>
  <td> <%= a_comment.body %> </td>
  <td><%= a_comment.created_at %> </td>

</tr>
<%end%>
</table>
<h3>Add a new comment</h3>
